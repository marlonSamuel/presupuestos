
@{
    ViewBag.Title = "Index";
    Model.Shared.GetPermisos permisos = new Model.Shared.GetPermisos().GetAllPerms(Helpers.SessionHelper.GetUser());
}

<section class="content-wrapper">
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">
                        <h1 class="box-title">PRESUPUESTOS</h1>
                        <div class="box-tools pull-right">
                        </div>
                    </div>

                    <div class="panel-body">
                        <div class="panel-body callout callout-success">
                            Seleccione el tipo de presupuesto que desea realizar

                            <span data-bind="model.usuarioController.permisos.centro_costo()"></span>
                        </div>
                        <div data-bind="visible: model.pindexController.indexMode()" class="row">
                            <!-- ko foreach: {data: model.pindexController.tipos, as: 'tipos'} -->
                        <div class="col-lg-3 col-xs-6">
                            <div>
                                <!-- small box -->
                                <div data-bind="attr: {class: tipos.clase}">
                                    <div class="inner">
                                        <h4 data-bind="text: tipos.nombre"></h4>

                                        <p data-bind="text: tipos.nombre"></p>
                                    </div>
                                    <div class="icon">
                                        <i data-bind="attr: {class: tipos.icon}"></i>
                                    </div>
                                    <a data-bind="click: model.pindexController.irA" href="#" class="small-box-footer">
                                        <i class="fa fa-arrow-circle-right"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                            <!-- /ko -->
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </section>
</section>

<script>
    $(document).ready(function () {
        model.pindexController.initialize();
    });
</script>




