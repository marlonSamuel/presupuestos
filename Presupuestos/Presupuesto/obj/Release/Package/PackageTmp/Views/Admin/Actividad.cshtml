
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Actividad";
}

<!--Contenido-->
<!-- Content Wrapper. Contains page content -->
<!-- Main content -->
<section class="content-wrapper">
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div data-bind="visible: model.actividadController.gridMode()">
                        <div class="box-header with-border">
                            <h1 class="box-title">Actividades <button class="btn btn-success" data-bind="click: model.actividadController.nuevo"><i class="fa fa-plus-circle"></i> Agregar</button></h1>
                            <div class="box-tools pull-right">
                            </div>
                        </div>
                        <!-- /.box-header -->
                        <!-- centro -->
                        <div class="panel-body table-responsive" style="height: 400px;" id="listadoregistros">
                            <table id="actividadGrid" class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Codigo</th>
                                        <th>Nombre</th>
                                        <th>Unidad de Medida</th>
                                        <th>Grupo Dimension</th>
                                        <th>Costo</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody data-bind="dataTablesForEach : {
                                    data: model.actividadController.actividades,
                                    options: dataTableOptions
                                  }">
                                    <tr>
                                        <td data-bind="text: codigo"></td>
                                        <td data-bind="text: nombre"></td>
                                        <td data-bind="text: unidadMedida"></td>
                                        <td data-bind="text: grupo"></td>
                                        <td><span data-bind="text: formatCurrency(parseFloat(costo).toFixed(2))"></span></td>
                                        <td>
                                            <a href="#" class="btn btn-warning btn-xs" data-bind="click: model.actividadController.editar"><i class="fa fa-pencil"></i></a>
                                            <a href="#" class="btn btn-danger btn-xs" data-bind="click: model.actividadController.remover"><i class="fa fa-trash-o"></i></a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <!--Fin centro -->
                    </div>

                    <div class="content" data-bind="visible: model.actividadController.insertMode()">

                        <form name="actividadForm" id="actividadForm" class="form" data-bind="with: model.actividadController.actividad">
                            <div class="row">
                                <div class="form-group col-sm-4 col-md-4">
                                    <label for="codigo">Codigo<span class="text-danger"> *</span></label>
                                    <input id="codigo" name="codigo" type="text" class="form-control" data-bind="value: codigo"
                                           data-error=".errorCodigo" required>
                                    <span class="errorCodigo text-danger help-inline"></span>
                                </div>
                                <div class="form-group col-sm-4 col-md-4">
                                    <label for="nombre">Nombre<span class="text-danger"> *</span></label>
                                    <input id="nombre" name="nombre" type="text" class="form-control" data-bind="value: nombre"
                                           data-error=".errorNombre" required>
                                    <span class="errorNombre text-danger help-inline"></span>
                                </div>
                                <div class="form-group col-sm-4 col-md-4">
                                    <label for="grupo">Grupo Dimension<span class="text-danger"> *</span></label>
                                    <select class="form-control" id="fincaId" data-bind="options: model.actividadController.grupos, optionsText: 'nombre', optionsValue: 'Id', value: grupoId"></select>
                                </div>
                                <div class="form-group col-sm-4 col-md-4">
                                    <label for="nombre">Unidade de medida<span class="text-danger"> *</span></label>
                                    <select class="form-control" id="fincaId" data-bind="options: model.actividadController.unidades, optionsText: 'nombre', optionsValue: 'unidadId', value: unidadId"></select>
                                </div>

                                <div class="form-group col-sm-4 col-md-4">
                                    <label for="costo">Costo<span class="text-danger"> *</span></label>
                                    <input id="costo" name="costo" type="number" step="0.01" class="form-control" data-bind="value: costo"
                                           data-error=".errorCosto" required>
                                    <span class="errorCosto text-danger help-inline"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-sm-12 col-md-12">
                                    <label for="descripcion">Descripcion</label>
                                    <textarea id="descripcion" name="descipcion" rows="3" type="text" class="form-control" data-bind="value: descripcion"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <p class="text-center">
                                    <button type="button" class="btn btn-info" data-bind="click:  model.actividadController.guardar, disable: model.actividadController.disable() "><i class="fa fa-save"></i> Guardar</button>
                                    <button type="button" class="btn btn-danger" data-bind="click:  model.actividadController.cancelar"><i class="fa fa-undo"></i> Cancelar</button>
                                </p>
                            </div>
                        </form>
                    </div>
                </div><!-- /.box -->
            </div><!-- /.col -->
        </div><!-- /.row -->

    </section>
</section><!-- /.content -->
<!--Fin-Contenido-->

<script>
        $(document).ready(function () {
            model.actividadController.initialize();
        });
</script>






