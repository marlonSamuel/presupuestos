
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Categoria";
}

<!--Contenido-->
<!-- Content Wrapper. Contains page content -->
<!-- Main content -->
<section class="content-wrapper">
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div data-bind="visible: model.categoriaController.gridMode()">
                        <div class="box-header with-border">
                            <h1 class="box-title">Categorias @*<button class="btn btn-success" data-bind="click: model.categoriaController.nuevo"><i class="fa fa-plus-circle"></i> Agregar</button>*@</h1>
                            <div class="box-tools pull-right">
                            </div>
                        </div>
                        <!-- /.box-header -->
                        <!-- centro -->
                        <div class="panel-body table-responsive" style="height: 400px;" id="listadoregistros">
                            <table id="categoriaGrid" class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Codigo</th>
                                        <th>Nombre</th>
                                    </tr>
                                </thead>
                                <tbody data-bind="dataTablesForEach : {
                                    data: model.categoriaController.categorias,
                                    options: dataTableOptions
                                  }">
                                    <tr>
                                        <td data-bind="text: codigo"></td>
                                        <td data-bind="text: nombre"></td>
                                        @*<td>
                                            <a href="#" class="btn btn-warning btn-xs" data-bind="click: model.categoriaController.editar"><i class="fa fa-pencil"></i></a>
                                            <a href="#" class="btn btn-danger btn-xs" data-bind="click: model.categoriaController.remover"><i class="fa fa-trash-o"></i></a>
                                        </td>*@
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <!--Fin centro -->
                    </div>

                    <div class="content" data-bind="visible: model.categoriaController.insertMode()">

                        <form name="categoriaForm" id="categoriaForm" class="form" data-bind="with: model.categoriaController.categoria">
                            <div class="row">
                                <div class="form-group col-sm-6 col-md-6">
                                    <label for="nombre">Nombre<span class="text-danger"> *</span></label>
                                    <input id="nombre" name="nombre" type="text" class="form-control" data-bind="value: nombre"
                                           data-error=".errorNombre" required>
                                    <span class="errorNombre text-danger help-inline"></span>
                                </div>
                                <div class="form-group col-sm-12 col-md-12">
                                    <label for="descripcion">Descripcion</label>
                                    <textarea id="descripcion" name="descripcion" type="text" class="form-control" data-bind="value: descripcion"></textarea>
                                    <span class="errorNombre text-danger help-inline"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <p class="text-center">
                                    <button type="button" class="btn btn-info" data-bind="click:  model.categoriaController.guardar, disable: model.categoriaController.disable() "><i class="fa fa-save"></i> Guardar</button>
                                    <button type="button" class="btn btn-danger" data-bind="click:  model.categoriaController.cancelar"><i class="fa fa-undo"></i> Cancel</button>
                                </p>
                            </div>
                        </form>
                    </div>
                </div><!-- /.box -->
            </div><!-- /.col -->
        </div><!-- /.row -->

    </section>
</section><!-- /.content -->
<!--Fin-Contenido-->

<script>
        $(document).ready(function () {
            model.categoriaController.initialize();
        });
</script>









